{% extends '/GenericInner.twig' %}

{% block topmenu %}

	<header class="page__header nav">
		<div class="nav__left">
			<a href="/profile/{{ profile.id }}" class="icon-text x-large">
				<img alt="Назад" src="i/arrow-left-red.svg" class="icon-text__icon">
				<span class="icon-text__text">Назад</span>
			</a>
		</div>
		<div class="nav__center">
			<div class="nav__frame nav__title">
				Сообщение
			</div>
		</div>
		<div class="nav__right">
			<a id="send-form-page" class="nav__large" href="#">Готово</a>
		</div>
	</header>

{% endblock %}

{% block page_classes %}page_fixed{% endblock %}

{% block content %}

	<form method="post" id="form-page" class="form-page" action="/profile/{{ recepientProfile.id }}/addWallMessage" autocomplete="off">
		<textarea name="wallMessage" class="form-page__area" placeholder="Новое сообщение здесь.."></textarea>
		<input name="authorId" type="hidden" value="{{ profile.id }}" />
		<input name="recepientId" type="hidden" value="{{ recepientProfile.id }}" />
	</form>
	<script>
		$(function(){
			var $form=$('#form-page');
			$('#send-form-page').click(function(){
				$form.submit();
				return false;
			});
		});
	</script>

{% endblock %}
