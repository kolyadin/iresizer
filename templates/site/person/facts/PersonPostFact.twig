{% extends '/person/facts/PersonFactGeneric.twig' %}

{% block head %}

	<title>Пришлите факт о {{ person.prepositionalName|e }} - popcornnews</title>

	<script type="text/javascript">
		$(function () {
			$('textarea[name=fact]').focus();
		})
	</script>

{% endblock %}

{% block personContent %}

	<h1 class="b-rubrics-title b-rubrics-title_s24">Новый факт о {{ person.prepositionalName }}</h1>

	<form method="post" class="b-text">
		<input type="hidden" name="personId" value="{{ person.id }}" />
		<p>Убедитесь, что данный факт не был опубликован ранее</p>

		<div class="b-facts__post-form">
			<p class="system-message">
				<textarea name="fact" rows="5" placeholder="Пишите здесь..."></textarea>
				<input class="b-firm-grad b-button-save" data-action="yes" type="submit" value="отправить" style="margin-left: 0;"/>
			</p>
		</div>
	</form>

{% endblock %}